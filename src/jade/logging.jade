ons-page(ng-controller="LoggingController")
    ons-toolbar
        div.center ログ付け
    br

    span 日付
    input(ng-model='date') 

    span 場所
    input(ng-model='location') 

    h3 ダイブデータ

    span start_time
    input(ng-model='start_time') 

    span end_time
    input(ng-model='end_time') 

    span 潜水時間
    p {{ dive_time || 0 }}

    span 開始残圧
    input(ng-model='start_pressure') 

    span 終了残圧
    input(ng-model='end_pressure') 

    span 消費 
    p {{ consumption_pressure || 0 }}

    span 平均水深
    input(ng-model='average_depth') 

    span 最大水深
    input(ng-model='max_depth') 

    span 最大水深
    input(ng-model='max_depth') 

    h3 海況

    span 透明度
    input(ng-model='transparency') 

    span 水温
    input(ng-model='water_temperature') 

    span うねり
    input(ng-model='undulation') 

    h3 装備

    span スーツ
    input(ng-model='suit') 

    span タンク
    input(ng-model='tank') 

    span ウェイト
    input(ng-model='weight') 

    br
    button(ng-click='submit()') submit


